#!/bin/zsh

alias watch='watch --color ' # hack to enable alias expansion using watch

alias ls='lsd -al' # enhanced ls

# Internet radio stations
## Austria
alias playoe1="mplayer 'https://orf-live.ors-shoutcast.at/oe1-q2a' -cache 2048 -cache-min 75" # Oesterreich 1
alias playoe3="mplayer 'https://orf-live.ors-shoutcast.at/oe3-q2a' -cache 2048 -cache-min 75" # Oesterreich 3
alias playoe2="mplayer 'https://orf-live.ors-shoutcast.at/vbg-q2a' -cache 2048 -cache-min 75" # Radio Vorarlberg

## Maine
alias playmainepublic="" # Maine Public Radio
alias playmaineclassical="" # Maine Public Classical

## SOMA.fm
alias playgroovesalad="mplayer -playlist http://somafm.com/groovesalad130.pls" # Soma FM Groove Salad
alias playsecretagent="mplayer -playlist https://somafm.com/secretagent130.pls" # Soma FM Secret Agent
alias playfolk="mplayer -playlist https://somafm.com/folkfwd130.pls" # Soma FM Folk Forward
alias playdubstep="mplayer -playlist https://somafm.com/dubstep130.pls" # Soma FM Dub Step Beyond
alias playspace="mplayer -playlist https://somafm.com/spacestation130.pls" # Soma FM Space Station Soma
alias playdefcon="mplayer -playlist https://somafm.com/defcon130.pls" # Soma FM DEF CON Radio

# change the kitty theme using a fzf selector
alias switchtheme="find ~/.config/kitty/kitty-themes/themes -iname '*.conf' -printf '%f\n' | sed 's/\.conf$//' | sort -r | fzf | xargs -Ixx kitty @ set-colors --all --configured ~/.config/kitty/kitty-themes/themes/xx.conf"

#sfdx
alias fss='sfdx force:source:status'
alias fsl='sfdx force:source:pull'
alias fsp='sfdx force:source:push'
alias fol='sfdx force:org:list'
alias fod='sfdx force:org:display'
alias foo='sfdx force:org:open'
alias fstr='sfdx force:source:tracking:reset --noprompt'
alias sdfx='sfdx'
alias newclass='sfdx force:apex:class:create'

alias orgs="sfdx force:org:list --json | jq '.result.scratchOrgs|map({(.instanceUrl): .alias})|add'"

alias bso='./dev-tools/rebuild-scratch-org'
alias rat=$'sfdx force:apex:test:run --wait=25 --testlevel=RunAllTestsInOrg --resultformat=json | jq \'{outcome: .result.summary.outcome, failing: .result.summary.failing, failed_tests: [(.result.tests[]|select(.Outcome == "Pass"|not))|{FullName, Message, StackTrace, Outcome}] }\''

#git
alias gby=gitcopybranchname.sh
alias lg=lazygit

#Switch kitty terminal theme
alias newtheme="find ~/.config/kitty/kitty-themes/themes -iname '*.conf' | sed 's/.*\/themes\/\(.*\)\.conf$/\1/' | sort -r | fzf --cycle | xargs -Ixx kitty @ set-colors -a ~/.config/kitty/kitty-themes/themes/xx.conf"

#Bluetooth headset
alias headseton='blueutil --connect "Soundcore Life Q20+"'
alias headsetoff='blueutil --disconnect "Soundcore Life Q20+"'

# Timewarrior
alias t='timew'
# System
alias shutdown='sudo shutdown now'
alias restart='sudo reboot'
alias suspend='systemctl suspend'

# add more aliases
alias realias="vim ~/dotfiles/zsh/aliases"
